<h1>New Review for <%= link_to @flick.title, flick_path(@flick) %></h1>

<div id="form">
  <%= render "shared/errors", object: @review %>
  <%= form_with(model: [@flick, @review]) do |f| %>
    <%= f.label :stars %>
    <%= f.select :stars, star_range, prompt: "Choose a star rating..." %>

    <%= f.label :comment %>
    <%= f.text_field :comment, placeholder: "What were your thoughts?" %>

    <%= f.submit "Post review" %>
  <% end %>
</div>
