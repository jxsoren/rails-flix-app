<header>
  <nav>
    <%= nav_link_to image_tag("logo.png"), "/" %>
    <ul class="left">
      <li>
        <%= nav_link_to "All Flicks", filtered_flicks_path(:all) %>
      </li>
      <li>
        <%= nav_link_to "Released", filtered_flicks_path(:released) %>
      </li>
      <li>
        <%= nav_link_to "Upcoming", filtered_flicks_path(:upcoming) %>
      </li>
      <li>
        <%= nav_link_to "Recent", filtered_flicks_path(:recent) %>
      </li>
      <li>
        <%= nav_link_to "Hits", filtered_flicks_path(:hits) %>
      </li>
      <li>
        <%= nav_link_to "Flops", filtered_flicks_path(:flops) %>
      </li>
      <li>
        <%= nav_link_to "Genres", genres_path %>
      </li>
      <% if current_user_admin? %>
        <li>
          <%= nav_link_to "Users", users_path %>
        </li>
      <% end %>
    </ul>

    <ul class="right">
      <% if current_user %>
        <li>
          <%= link_to current_user.name, user_path(current_user) %>
        </li>
        <li>
          <%= link_to "Settings", edit_user_path(current_user), class: "button" %>
        </li>
        <li>
          <%= link_to "Sign Out", session_path,
                      data: { turbo_method: :delete }, class: "button" %>
        </li>
      <% else %>
        <li>
          <%= link_to "Sign Up", signup_path, class: "button" %>
        </li>
        <li>
          <%= link_to "Sign In", signin_path, class: "button" %>
        </li>
      <% end %>
    </ul>

  </nav>
</header>