<h1>Edit Account</h1>

<br/>

<section class="user">
  <div>
    <%= render "form", user: @user %>
  </div>

  <div class="actions">
    <%= link_to "Preview account", @user, class: "button edit" %>
    <% if current_user_admin? %>
      <%= link_to "Delete account", @user, class: 'button delete',
                  data: {
                    turbo_method: :delete,
                    turbo_confirm: 'Permanently delete your account?'
                  }
      %>
    <% end %>
  </div>
</section>
