<%= form_with model: flick do |f| %>
  <%= render "shared/errors", object: flick %>

  <%= f.label :main_image %>
  <%= f.file_field :main_image %>

  <%= f.label :title %>
  <%= f.text_field :title, autofocus: true %>

  <%= f.label :description %>
  <%= f.text_area :description, rows: 10 %>

  <%= f.label :total_gross %>
  <%= f.text_field :total_gross %>

  <%= f.label :rating %>
  <%= f.select :rating, Flick::RATINGS, prompt: 'Select One' %>

  <%= f.label :released_on %>
  <%= f.date_field :released_on %>

  <%= f.label :director %>
  <%= f.text_field :director %>

  <%= f.label :duration %>
  <%= f.text_field :duration %>

  <div class="checkboxes">
    <%= f.collection_check_boxes(:genre_ids, Genre.order(:name), :id, :name) %>
  </div>

  <%= f.submit %>
<% end %>
